<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/sc_profile"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:layout_gravity="center_vertical"
    n1:background="@drawable/border_rl_white"
    n1:padding="@dimen/margin_small">

    <RelativeLayout
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:padding="@dimen/margin_standard">

        <ImageView
            n1:id="@+id/btn_close"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_alignParentRight="true"
            n1:src="@drawable/ic_close_red" />
        <TextView
            n1:id="@+id/text_title"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_centerHorizontal="true"
            n1:layout_marginBottom="@dimen/margin_standard"
            n1:layout_marginTop="@dimen/margin_standard"
            n1:text="File Upload"
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/title_font"
            n1:textStyle="bold" />
        <EditText
            n1:layout_width="match_parent"
            n1:layout_height="40dp"
            n1:layout_marginTop="@dimen/margin_small"
            n1:layout_marginRight="@dimen/margin_standard"
            n1:layout_marginLeft="@dimen/margin_standard"
            n1:layout_below="@+id/text_title"
            n1:id="@+id/et_surah"
            n1:background="@drawable/border_et_transparent_gray"
            n1:hint="Nama Surah"
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/text_font"
            n1:inputType="textPersonName"
            />
        <EditText
            n1:layout_width="match_parent"
            n1:layout_height="40dp"
            n1:layout_marginTop="@dimen/margin_small"
            n1:layout_marginRight="@dimen/margin_standard"
            n1:layout_marginLeft="@dimen/margin_standard"
            n1:layout_below="@+id/et_surah"
            n1:id="@+id/et_urut"
            n1:background="@drawable/border_et_transparent_gray"
            n1:hint="Urutan"
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/text_font"
            n1:inputType="number"
            />
        <EditText
            n1:layout_width="match_parent"
            n1:layout_height="40dp"
            n1:layout_marginTop="@dimen/margin_small"
            n1:layout_marginRight="@dimen/margin_standard"
            n1:layout_marginLeft="@dimen/margin_standard"
            n1:layout_below="@+id/et_urut"
            n1:id="@+id/et_jus"
            n1:background="@drawable/border_et_transparent_gray"
            n1:hint="Jus Ke -"
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/text_font"
            n1:inputType="number"
            />
        <Button
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/margin_standard"
            n1:text="Pilih File (.PDF)"
            n1:layout_centerHorizontal="true"
            n1:layout_below="@+id/et_jus"
            n1:id="@+id/btn_file"
            n1:background="@drawable/border_btn_green"
            n1:padding="@dimen/margin_standard"
            n1:textColor="@color/putih"
            />
        <TextView
            n1:id="@+id/text_file"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/btn_file"
            n1:layout_centerHorizontal="true"
            n1:layout_marginBottom="@dimen/margin_standard"
            n1:layout_marginTop="@dimen/margin_standard"
            n1:text="Tidak ada file yang dipilih"
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/text_font"
            />

        <RelativeLayout
            n1:id="@+id/btn_tambah"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/text_file"
            n1:layout_margin="@dimen/margin_standard"
            n1:background="@drawable/border_btn_green_white"
            n1:padding="@dimen/margin_standard">

            <ImageView
                n1:id="@+id/img_btn_tambah"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:src="@drawable/ic_upload_gray" />

            <TextView
                n1:id="@+id/text_btn_tambah"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_centerInParent="true"
                n1:text="Upload"
                n1:textColor="@color/putihGelap2"
                n1:textSize="@dimen/title_font" />
        </RelativeLayout>
        <RelativeLayout
            n1:id="@+id/btn_delete"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/btn_tambah"
            n1:layout_marginRight="@dimen/margin_standard"
            n1:layout_marginLeft="@dimen/margin_standard"
            n1:background="@drawable/border_btn_red"
            n1:padding="@dimen/margin_standard"
            n1:visibility="gone"
            >

            <ImageView
                n1:id="@+id/img_btn_delete"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:src="@drawable/ic_delete_white" />

            <TextView
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_centerInParent="true"
                n1:text="Hapus"
                n1:textColor="@color/putih"
                n1:textSize="@dimen/title_font" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>