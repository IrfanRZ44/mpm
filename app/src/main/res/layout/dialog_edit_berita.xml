<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/sc_profile"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:background="@drawable/border_rl_white"
    n1:padding="@dimen/margin_small">

    <ImageView
        n1:id="@+id/btn_close"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_alignParentRight="true"
        n1:src="@drawable/ic_close_red" />

    <TextView
        n1:id="@+id/text_title"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_centerHorizontal="true"
        n1:layout_marginBottom="@dimen/margin_standard"
        n1:layout_marginTop="@dimen/margin_standard"
        n1:text="Edit Url Berita"
        n1:textColor="@color/hitamGray"
        n1:textSize="@dimen/title_font"
        n1:textStyle="bold" />

    <LinearLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_below="@+id/text_title"
        n1:orientation="vertical"
        n1:padding="@dimen/margin_small">

        <TextView
            n1:id="@+id/text_desc"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_marginTop="@dimen/margin_small"
            n1:text="Link Url : "
            n1:textColor="@color/hitamGray"
            n1:textSize="@dimen/title_font" />

        <EditText
            n1:id="@+id/et_url"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_marginBottom="@dimen/margin_small"
            n1:layout_toRightOf="@+id/text_desc"
            n1:background="@drawable/border_et_transparent_gray"
            n1:lines="5"
            n1:maxLines="5"
            n1:textColor="@color/hitam"
            n1:textSize="@dimen/title_font" />

        <RelativeLayout
            n1:id="@+id/btn_simpan"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_margin="@dimen/margin_standard"
            n1:background="@drawable/border_btn_green_white"
            n1:padding="@dimen/margin_standard">

            <ImageView
                n1:id="@+id/img_btn_tambah"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:src="@drawable/ic_add_gray2" />

            <TextView
                n1:id="@+id/text_btn_tambah"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_centerInParent="true"
                n1:text="Tambah"
                n1:textColor="@color/putihGelap2"
                n1:textSize="@dimen/title_font" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>