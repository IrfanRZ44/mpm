<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@drawable/border_rl_green"
    android:elevation="8dp"
    android:padding="10dp"
    android:layout_marginTop="@dimen/margin_standard"
    >

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standard"
        android:singleLine="true"
        android:textColor="@color/putih"
        android:textSize="@dimen/title_font"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/listImage"
        />
    <TextView
        android:id="@+id/text_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/putihGelap1"
        android:textSize="12sp"
        android:layout_below="@+id/text_title"
        android:layout_toRightOf="@+id/listImage"
        android:layout_marginLeft="@dimen/margin_standard"
        />

    <TextView
        android:id="@+id/text_lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/putih"
        android:textSize="@dimen/text_font"
        android:layout_toRightOf="@+id/text_tanggal"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:gravity="end"
        />


</RelativeLayout>